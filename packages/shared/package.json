{
  "name": "@smartbundle/shared",
  "version": "0.0.0",
  "description": "Shared domain types, validation, and utility functions for SmartBundle services and frontend.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.mjs",
      "require": "./dist/types/index.cjs",
      "types": "./dist/types/index.d.ts"
    },
    "./validation": {
      "import": "./dist/validation/index.mjs",
      "require": "./dist/validation/index.cjs",
      "types": "./dist/validation/index.d.ts"
    },
    "./normalizers": {
      "import": "./dist/normalizers/index.mjs",
      "require": "./dist/normalizers/index.cjs",
      "types": "./dist/normalizers/index.d.ts"
    },
    "./search": {
      "import": "./dist/search/index.mjs",
      "require": "./dist/search/index.cjs",
      "types": "./dist/search/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/types/index.ts src/validation/index.ts src/normalizers/index.ts src/search/index.ts --dts --format cjs,esm --out-dir dist --clean",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run"
  },
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "tsup": "^8.3.5"
  }
}
